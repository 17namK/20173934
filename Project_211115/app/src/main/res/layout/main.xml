<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@drawable/main_back_1"
        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageButton
            android:id="@+id/room_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="방 둘러보기"
            android:textSize="20sp"
            android:background="@drawable/btn_view"
            />

        <ImageButton
            android:id="@+id/room_share"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#000000"
            android:layout_marginLeft="50dp"
            android:text="방 보여주기"
            android:textSize="20sp"
            android:src="@drawable/btn_share"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/room_tips"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="#000000"
        android:text="방 꿀팁"
        android:textSize="20sp"
        android:src="@drawable/btn_tips"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="bottom"
        >
        <Button
            android:id="@+id/MView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="방\n보기"/>

        <Button
            android:id="@+id/Mtips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="방\n꿀팁" />
        <Button
            android:id="@+id/Mmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="메인\n화면"/>
        <Button
            android:id="@+id/Mfavorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="즐겨\n찾기"/>
        <Button
            android:id="@+id/Mprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="내\n정보"/>


    </LinearLayout>

</LinearLayout>